# Fast cohesive cluster test - unified pipeline
# Uses simulations/ folder with better video generation

sim_name: "cohesive_cluster_test"

model:
  type: discrete

domain:
  Lx: 20.0
  Ly: 20.0
  bc: periodic

particles:
  N: 50
  v0: 2.0
  initial_distribution: gaussian_cluster

alignment:
  R: 3.0
  eta: 0.05

forces:
  enabled: true
  Ca: 15.0
  Cr: 2.0
  la: 8.0
  lr: 0.5
  mu_t: 1.0

integration:
  T: 10.0
  dt: 0.05
  seed: 456

outputs:
  density_resolution: 50
  
# Time integration
time:
  T: 8000                 # Long simulation to see steady motion
  dt: 0.05

# KDE settings for density estimation
kde:
  nx: 60                  # High resolution
  ny: 60
  bandwidth: 0.6          # Sharp bandwidth for well-defined cluster

# Output settings
output:
  save_trajectory: true
  save_velocity: true
  save_density: true
  save_videos: true       # Enable videos
  video_subsample: 8      # Save every 8th frame (1000 frames)
  
# Random seed
seed: 456
