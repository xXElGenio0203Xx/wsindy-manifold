# Long ordered simulation - for better MVAR-ROM prediction
# High polarization + long time = predictable dynamics

# Domain configuration
domain:
  Lx: 20.0
  Ly: 20.0
  bc: periodic                    # Periodic for continuous motion

# Particle configuration
particles:
  N: 200
  initial_distribution: uniform
  initial_speed: 0.8
  velocity_distribution: random

# Model type
model:
  type: discrete
  speed_mode: constant

# Dynamics
dynamics:
  alignment:
    enabled: true
    radius: 3.0
    rate: 1.0
  
  forces:
    enabled: true
    Cr: 0.8
    Ca: 2.0                       # Moderate attraction for clustering
    lr: 0.6
    la: 2.0
    rcut_factor: 3.0
    mu_t: 0.6
  
  noise:
    type: gaussian
    eta: 0.1                      # LOW noise for high order!
    match_variance: true
  
  self_propulsion:
    alpha: 1.5
    beta: 0.5

# Integration
integration:
  T: 500.0                        # LONG simulation for more training data
  dt: 0.01
  save_every: 10
  neighbor_rebuild: 5
  integrator: euler
  seed: 42

# Outputs
outputs:
  run_name: long_ordered_mvar
  order_parameters: true
  animations: true
  save_csv: false
  fps: 20
  density_resolution: 50
  arrows:
    enabled: true
    scale: speed
    scale_factor: 1.0
