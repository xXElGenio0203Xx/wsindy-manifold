# Centered cluster with strong Vicsek alignment
# Reflecting boundaries, no forces, high particle count

sim_name: "centered_cluster_strong_alignment"

# Simulator settings
simulator:
  type: "vicsek_discrete"  # Discrete-time Vicsek with alignment only
  
# Domain
domain:
  L: 20.0                 # Domain size [-L/2, L/2] x [-L/2, L/2]
  boundary: "periodic"    # Periodic boundary conditions

# Particles
particles:
  N: 200                  # Many particles for rich dynamics
  v0: 1.0                 # Constant speed
  
# Initial conditions
initial_conditions:
  type: "cluster"         # Start as a tight cluster
  cluster_center: [0.0, 0.0]  # Centered in domain
  cluster_radius: 2.0     # Tight initial cluster (radius 2.0 in domain of 20.0)
  velocity_type: "random" # Random initial orientations

# Vicsek alignment parameters
vicsek:
  R: 1.0                  # Interaction radius
  eta: 0.1                # Low noise for strong alignment (eta=0.1 << 1)
  dt: 0.1                 # Time step

# No forces (pure Vicsek alignment)
forces:
  morse_potential: null   # No Morse forces
  
# Time integration
time:
  T: 5000                 # 5000 frames for long-term behavior
  dt: 0.1

# KDE settings for density estimation
kde:
  nx: 60                  # Higher resolution for visualization
  ny: 60
  bandwidth: 0.8          # Moderate bandwidth for smooth density

# Output settings
output:
  save_trajectory: true
  save_velocity: true
  save_density: true
  save_videos: true       # Enable videos for visualization
  video_subsample: 5      # Save every 5th frame to video (1000 frames total)
  
# Random seed
seed: 123
